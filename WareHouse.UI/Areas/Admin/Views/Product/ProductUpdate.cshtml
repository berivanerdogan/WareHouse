
@{
    ViewBag.Title = "ProductUpdate";
    Layout = "~/Areas/Admin/Views/Shared/AdminLayoutPage.cshtml";
}

@model WareHouse.UI.Areas.Admin.Models.DTO.ProductDTO

<div class="content-wrapper" style="min-height: 946px;">
    <!-- Content Header (Page header) -->
    <section class="content-header">

        <ol class="breadcrumb">
            <li><a href="/Admin/Home/AdminHomeIndex"><i class="fa fa-dashboard"></i> Home</a></li>
            <li><a href="/Admin/Product/ProductAdd">Add Product</a></li>
            <li><a href="/Admin/Product/ProductList">Product List</a></li>
            <li class="active">Update Product</li>
        </ol>
    </section>

    <!-- Main content -->
    <section class="content">
        <div class="row">
            <!-- left column -->
            <div class="col-md-6">
                <!-- general form elements -->
                <div class="box box-primary">
                    <div class="box-header with-border">
                        <h3 class="box-title">Update Product</h3>
                    </div>
                    <!-- /.box-header -->
                    <!-- form start -->
                    <form action="/Admin/Product/ProductUpdate" method="post" enctype="multipart/form-data" role="form">
                        <div class="box-body">
                            <div class="form-group">
                                <label for="text">Product Name</label>
                                <input type="text" name="ProductName" value="@Model.ProductName" class="form-control" placeholder="Product Name">
                            </div>
                            <div class="form-group">
                                <label for="text">Product Description</label>
                                <input type="text" name="ProductDescription" value="@Model.ProductDescription" class="form-control" placeholder="Product Description">
                            </div>

                            <div class="form-group">
                                <label for="text">Unit Price</label>
                                <input type="text" name="UnitPrice" value="@Model.UnitPrice" class="form-control" placeholder="Unit Price">
                            </div>

                            <div class="form-group">
                                <label for="text">Units In Stock</label>
                                <input type="text" name="UnitsInStock" value="@Model.UnitsInStock" class="form-control" placeholder="Units In Stock">
                            </div>

                            @*<div class="form-group">
                                <label for="CategoryID">Choose Category</label>
                                <select name="CategoryID" class="form-control">
                                    @foreach (var item in Model.Categories)
                                    {
                                        <option value="@item.ID">@item.CategoryName</option>
                                    }
                                </select>
                            </div>*@

                        </div>
                        <input  type="text" style="visibility:hidden" name="ID" value="@Model.ID" />
                        <div class="box-footer">
                            <button type="submit" class="btn btn-primary">Submit</button>
                        </div>
                    </form>
                </div>


            </div>

        </div>

    </section>

</div>


