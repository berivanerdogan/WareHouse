
@model WareHouse.UI.Areas.Admin.Models.DTO.ProductDTO

<div class="col-md-6">
    <div class="box box-primary">
        <div class="box-header with-border">
            <h3 class="box-title">Add Product</h3>
        </div>

        <form action="/Admin/Product/ProductAdd" method="post" enctype="multipart/form-data" role="form">
            <div class="box-body">
                <div class="form-group">
                    <label for="text">Product Name</label>
                    <input type="text" name="ProductName" class="form-control" placeholder="Product Name">
                    @Html.ValidationMessageFor(x=>x.ProductName)
                </div>
                <div class="form-group">
                    <label for="text">Product Description</label>
                    <input type="text" name="ProductDescription" class="form-control" placeholder="Product Description">
                    @Html.ValidationMessageFor(x=>x.ProductDescription)
                </div>

                <div class="form-group">
                    <label for="text">Unit Price</label>
                    <input type="text" name="UnitPrice" class="form-control" placeholder="Unit Price">
                    @Html.ValidationMessageFor(x=>x.UnitPrice)
                </div>

                <div class="form-group">
                    <label for="text">Units In Stock</label>
                    <input type="text" name="UnitsInStock" class="form-control" placeholder="Units In Stock">
                    @Html.ValidationMessageFor(x=>x.UnitsInStock)
                </div>

                @*<div class="form-group">
                        <label for="CategoryID">Choose Category</label>
                        <select name="CategoryID" class="form-control">
                            @foreach (var item in Model)
                            {
                                <option value="@item.ID">@item.CategoryName</option>
                            }
                        </select>
                    </div>*@

            </div>

            <div class="box-footer">
                <button type="submit" class="btn btn-primary">Submit</button>
            </div>
        </form>
    </div>


</div>
